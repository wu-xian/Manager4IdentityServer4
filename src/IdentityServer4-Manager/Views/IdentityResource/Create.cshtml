@model IdentityServer4.Manager.Model.ViewModel.IdentityResourceViewModel

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="modalTitle">
            Create Claims
        </h4>
    </div>
    <div id="modal-body" class="modal-body">
        <form class="form-horizontal" action="/user/createClaim">
            <div class="form-group">
                <label class="col-sm-3 control-label">Name</label>
                <div class="col-sm-9">
                    <input asp-for="Name" class="form-control" placeholder="IdentityResource Name" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">DisplayName</label>
                <div class="col-sm-9">
                    <input asp-for="DisplayName" class="form-control" placeholder="IdentityResource DisplayName" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">DisplayName</label>
                <div class="col-sm-9">
                    <input asp-for="Description" class="form-control" placeholder="IdentityResource Description" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button id="btn_create_identityResource" type="button" class="btn btn-primary btn-loading"
                        data-loading-text="<i class='fa fa-spinner fa-spin '></i>&nbsp; Create">
                    Create
                </button>
            </div>
        </form>
    </div>